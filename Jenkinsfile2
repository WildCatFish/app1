pipeline {
    agent { docker 'maven:3.8.2' }

    stages {
        stage ('Compile Stage') {

            steps {
                   sh 'mvn clean compile'
            }
        }

        stage ('Testing Stage') {

            steps {
                   sh 'mvn test'
            }
        }
        
        stage('Deploying Stage'){
        
            steps{
                sh 'docker run --network mynet --name mysql -d  emps/mysql'
                sh 'docker run --network mynet --name app --link mysql:mysql -p 8081:8081 emps/app'
            }
        }


    }
}
