pipeline {
    agent any

    stages {
       
        
        stage('Compiling Stage'){
            agent { docker 'maven:3.8.2' }
            steps{
                sh 'mvn clean compile'
            
            }
        
        }
        
        stage ('Testing Stage') {
            agent { docker 'maven:3.8.2' }
            steps {
                   sh 'mvn test'
            }
        }
        
        stage('Deploying Stage'){
            agent any
            steps{
                // Do the cleaning up before restarting the containers, discard all the error outputs
                sh 'docker stop app1_app 2>/dev/null '
                sh 'docker stop app1_mysql 2>/dev/null '
                sh 'docker rm -f app1_app 2>/dev/null '
                sh 'docker rm -f app1_mysql 2>/dev/null '
                
                // Restart the containers in the background, this will also rebuild the containers
                sh 'docker-compose up -d'
            }
        }


    }
}
